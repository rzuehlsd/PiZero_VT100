#!/bin/bash
# Compatibility launcher for host-loopback helper in VT100/tools.

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
TARGET="$SCRIPT_DIR/VT100/tools/host_loopback/VT100_PTY"

if [[ ! -x "$TARGET" ]]; then
  echo "Missing executable helper: $TARGET" >&2
  exit 1
fi

exec "$TARGET" "$@"

